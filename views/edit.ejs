<% include ./partials/header %>

<div class="ui center aligned grid">
    <div class="ui segment">
        <h1 class="ui header">New Post</h1>
        <div class="ui inverted segment">
            <div class="ui inverted form">
                <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                    <div class="fields">
                        <div class="field">
                            <label>Title</label>
                            <input type="text" name="blog[title]" value="<%= blog.title %>">
                        </div>
                    </div>
                    <div class="fields">
                        <div class="field">
                            <label>Image URL</label>
                            <input type="text" name="blog[image]" value="<%= blog.image %>">
                        </div>
                    </div>
                    <div class="fields">
                        <div class="field">
                            <label>Body Text</label>
                            <textarea name="blog[body]"><%- blog.body %></textarea>
                        </div>
                    </div>
                    
                    <input class="ui inverted green button" type="submit">
                </form>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>
