<% include ./partials/header %>

<div class="ui main text segment">
    <div class="ui center aligned grid">
        <h2><%= blog.title %></h2>
    </div>
    <div class="ui center aligned grid">
        <img src="<%= blog.image %>">
    </div>
    <div class="ui center aligned grid">
        <p><%- blog.body %></p>
    </div>
    <div class="ui center aligned grid">
        <p><%= blog.date.toDateString() %></p>
    </div>
    
    <div class="ui center aligned grid">
        <div class="ui orange basic button">
            <a href="/blogs/<%= blog._id %>/edit">Edit</a>
        </div>
        <div class="ui green basic button">
            <a href="/blogs">Back</a>
        </div>
        <form style="display:inline" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class="ui red button">Delete</button>
        </form>
    </div>
</div>

<% include ./partials/footer %>
