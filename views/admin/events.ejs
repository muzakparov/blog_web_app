<% include ../partials/header %>

<div class="card jumbotron">
  <div class="card-header">
    <div class="">
      <div class="">
        <h1 class="align-center text-center">
          Events
          <a
            class="btn btn-success btn-lg float-right"
            role="button"
            aria-pressed="true"
            href="/events/new"
            >New Event</a
          >

          <!-- <a role="button" class="btn btn-success " href="/users/new">New user</button> -->
        </h1>
      </div>
    </div>
  </div>
  <div class="card-body mb-2">
    <% events.forEach(function(event){ %>
    <div class="border shadow mb-2 p-5 bg-gradient-light bg-white">
      <table class="table table-bordered">
        <tbody>
          <% ["name","description", "starts_at", "ends_at",
         
          "capacity",
          "date",
          ].forEach(function(name){
          %>
          <tr>
            <th class="border-top-0"><%= name %></th>
            <td><%= event[name] %></td>
          </tr>
          <% }) %>
          <% [
            "chapter_id",
            "venue_id",
            "tag_ids",
            "chapter_id",
            "sponsors_id"     
          ].forEach(function(name){
          %>
          <tr>
            <th class="border-top-0"><%= name %></th>
            <td><%= event[name] %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="text-center">
        <button
          type="button"
          class="btn btn-danger"
          onclick="removeUser('<%= event.id %>')"
        >
          Remove
        </button>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<% include ../partials/footer %>
