<% include ../partials/header %>

<div class="card">
  <div class="card-header">
    <a href="/events" class="float-left text-sm-left">Back</a>
    <h1 class="text-center">
      Create a new event
    </h1>
  </div>
  <div class="card-body">
    <form action="/events" method="POST">
      <div class="form-group">
        <label for="name">name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="event[name]"
          aria-describedby="name"
          placeholder="Enter name"
        />
      </div>
      <div class="form-group">
        <label for="description">description</label>
        <input
          type="text"
          class="form-control"
          id="description"
          name="event[description]"
          aria-describedby="description"
          placeholder="Enter description"
        />
      </div>
      <div class="form-group">
        <label for="starts_at">starts_at</label>
        <input
          type="text"
          class="form-control"
          id="starts_at"
          name="event[starts_at]"
          aria-describedby="starts_at"
          placeholder="Enter starts_at"
        />
      </div>
      <div class="form-group">
        <label for="ends_at">ends_at</label>
        <input
          type="text"
          class="form-control"
          id="ends_at"
          name="event[ends_at]"
          aria-describedby="ends_at"
          placeholder="Enter ends_at"
        />
      </div>

      <div class="form-group">
        <label for="chapter_id">chapter_id</label>

        <select class="form-control" id="chapter_id" name="event[chapter_id]">
          <option selected>Choose...</option>
          <% chapters.forEach( chapter => { %>
          <option value="<%= chapter.id %>"><%= chapter.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="venue_id">venue_id</label>

        <select class="form-control" id="venue_id" name="event[venue_id]">
          <option selected>Choose...</option>
          <% venues.forEach( venue => { %>
          <option value="<%= venue._id %>"><%= venue.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="tag_ids">tag_ids</label>

        <!-- Build your select: -->
        <select
          id="tag_ids"
          multiple="multiple"
          name="event[tag_ids]"
          class="form-control"
        >
          <% tags.forEach( tag => { %>
          <option value="<%= tag._id %>"><%= tag.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="sponsors_id">sponsors_id</label>

        <select
          id="sponsors_id"
          multiple="multiple"
          class="form-control"
          id="sponsors_id"
          name="event[sponsors_id]"
        >
          <% sponsors.forEach( sponsor => { %>
          <option value="<%= sponsor._id %>"><%= sponsor.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="capacity">capacity</label>
        <input
          type="number"
          class="form-control"
          id="sponsors_id"
          name="event[capacity]"
          aria-describedby="capacity"
          placeholder="Enter capacity"
        />
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>

<% include ../partials/footer %>
